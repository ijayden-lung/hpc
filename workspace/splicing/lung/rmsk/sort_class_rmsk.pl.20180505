#!/usr/bin/perl -w
#
#
#
#
#### 11 For Class, 12 For Family
#
my ($mm10_rmsk,$mm10_norm,$mm10_cls,$cls) = @ARGV;
&class($cls,$mm10_rmsk,$mm10_norm,$mm10_cls);

sub class{
	open FILE, "$_[1]";
	my $field = <FILE>;
	my ($cls_name) = (split /\t/,$field)[$cls];
	my %hash;
	my %class;
	while(<FILE>){
		chomp;
		my ($gene,$class) = (split)[10,$_[0]];
		$hash{$gene} = $class;
	}


	###### READ COUNT
	open FILE2, "$_[2]";
	my $header = <FILE2>;
	chomp $header;
	my @header = split /\t/, $header;
	while(<FILE2>){
		my @data = split /\t/;
		for(my $i=1;$i<@data;$i++){
			$class{$hash{$data[0]}}->{$header[$i]} += $data[$i];
		}
	}

	open OUT, ">",$_[3];
	$header[0] = $cls_name;
	print OUT join "\t",@header,"\n";
	while(my ($key,$value) =each %class){
		print OUT "$key";
		for(my $i=1;$i<@header;$i++){
			print OUT "\t$value->{$header[$i]}";
		}
		print OUT "\n";
	}

}


