#!/usr/bin/perl -w


my %mouse;
open MOU,"mouse.sam ";
while(<MOU>){
	chomp;
	my ($grna,$mismatch) = (split)[0,7];
	$mouse{$grna}++;
}


my %rat;
my $homo=0;
my $mouspe=0;
my $ratspe=0;
my %homo;
my %mouspe;
my %ratspe;
open RAT,"rat.sam";
while(<RAT>){
	chomp;
	my ($grna,$mismatch) = (split)[0,7];
	if(1){
		$rat{$grna}++;
		if(!exists $mouse{$grna}){
			$ratspe++;
			$ratspe{$grna} = '';
		}
	}
}


while(my ($grna,$num) = each %mouse){
	if(exists $rat{$grna}){
		$homo++;
		$homo{$grna}++;
	}
	else{
		$mouspe++;
		$mouspe{$grna} = '';
	}
}


open FILE,"../FEF.normalized.txt";
my $header = <FILE>;
$header =~ s/4th/1/g;
$header =~ s/5th/2/g;
$header =~ s/ay//g;
open OUT1,">RC_mKO_FEF_homo0.tsv";
open OUT2,">RC_mKO_FEF_hete0.tsv";
open OUT3,">RC_mKO_FEF_rat.tsv";
open OUT4,">RC_mKO_FEF_unmap.tsv";
print OUT1 $header;
print OUT2 $header;
print OUT3 $header;
print OUT4 $header;

open OUT5,">RC_mKO_FEF_mis1.tsv";
print OUT5 "sgRNA\tGene\t";
while(<FILE>){
	chomp;
	my ($grna) = split;
	if(exists $homo{$grna}){
		print OUT1 "$_\n";
	}
	elsif(exists $mouspe{$grna}){
		print OUT2 "$_\n";
	}
	elsif(exists $ratspe{$grna}){
		print OUT3 "$_\n";
	}
	else{
		print OUT4 "$_\n";
	}
}


print "$homo\t$mouspe\t$ratspe\n";
