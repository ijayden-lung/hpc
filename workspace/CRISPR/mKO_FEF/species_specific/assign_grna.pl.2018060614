#!/usr/bin/perl -w


my %mouse;
my %misNum;
open MOU,"mouse.sam ";
while(<MOU>){
	chomp;
	my ($grna,$mismatch) = (split)[0,7];
	$mouse{$grna}++;
	$misNum{$grna} = 0;
}


my %rat;
my $homo=0;
my $mouspe=0;
my $ratspe=0;
my %homo;
my %mouspe;
my %ratspe;
open RAT,"rat.sam";
while(<RAT>){
	chomp;
	my ($grna,$mismatch) = (split)[0,7];
	my $mis_num = 0;
	if(defined $mismatch){
		my @mis_num = split /,/,$mismatch;
		$mis_num = @mis_num;
		if($mismatch =~ /22|23/){
			$mis_num = 23;
		}
		elsif($mismatch =~ /21/){
			$mis_num -= 1;
		}
	}
	$misNum{$grna} = $mis_num;
	if($mis_num <1){
		$rat{$grna}++;
		if(!exists $mouse{$grna}){
			$ratspe++;
			$ratspe{$grna} = '';
		}
	}
}


while(my ($grna,$num) = each %mouse){
	if(exists $rat{$grna}){
		$homo++;
		$homo{$grna}++;
	}
	else{
		$mouspe++;
		$mouspe{$grna} = '';
	}
}


open FILE,"../FEF.normalized.txt";
my $header = <FILE>;
$header =~ s/4th/1/g;
$header =~ s/5th/2/g;
$header =~ s/ay//g;
open OUT1,">RC_mKO_FEF_homo.tsv";
open OUT2,">RC_mKO_FEF_hete.tsv";
open OUT3,">RC_mKO_FEF_rat.tsv";
open OUT4,">RC_mKO_FEF_unmap.tsv";
print OUT1 $header;
print OUT2 $header;
print OUT3 $header;
print OUT4 $header;

open OUT5,">RC_mKO_FEF_mis1.tsv";
print OUT5 "sgRNA\tmismatch\t";
while(<FILE>){
	chomp;
	my ($grna) = split;
	if(exists $homo{$grna}){
		print OUT1 "$_\n";
	}
	elsif(exists $mouspe{$grna}){
		print OUT2 "$_\n";
		print OUT5 "$grna\t$misNum{$grna}\n";
	}
	elsif(exists $ratspe{$grna}){
		print OUT3 "$_\n";
	}
	else{
		print OUT4 "$_\n";
	}
}

my $total = $homo+$mouspe;
print "$homo\t$mouspe\t$ratspe\n";
my $homo_rate = $homo/$total*100;
my $hete_rate = $mouspe/$total*100;
print "$homo_rate\t$hete_rate\n";

