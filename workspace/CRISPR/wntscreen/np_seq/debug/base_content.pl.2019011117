#!/usr/bin/perl -w

my ($exp)  = @ARGV;
open FILE,"zcat ../fastq/$exp.fq.gz |";
my %hash;
while(<FILE>){
	chomp;
	if($.%4 == 2){
		my @string = split //,$_;
		for(my $i=0;$i<@string;$i++){
			#$hash{$i}->{$string[$i]}++;
			$hash{$string[$i]}->{$i}++;
		}
		#print "$_\n";
	}
}

open OUT,">Input_seqlogo_$exp.txt";
for(my$i=1;$i<=150;$i++){
	print OUT "\t$i";
}
print OUT "\n";

while (my ($base,$val) = each %hash){
	next if $base eq "N";
	print OUT $base;
	foreach my $pos (sort{$a<=>$b} keys %$val){
		print "\t$pos";
		print OUT "\t$val->{$pos}";
	}
	print "\n";
	print OUT "\n";
}

