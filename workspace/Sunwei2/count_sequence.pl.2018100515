#!/usr/bin/perl -w
#

my %sum;
my %logo;
open FILE,"zcat WC_SW2_286_S1_L004_R1_001.fastq.gz |";
while(<FILE>){
	chomp;
	if($.%4==2){
		my $pre = substr($_,0,15);
		my $left = substr($_,15);
		my $i =0;
		for(;$i<10;$i++){
			if(substr($left,$i,1) ne "A" ){
				last;
			}
		}
		$sum{$i}++;
		for(my $j=0;$j<15;$j++){
			$logo{$i}->{substr($pre,$j,1)}->{$j}++;
		}
	}
}


while(my ($key,$val) = each %logo){
	open OUT,">Input_logo_WC_SW2_286_$key.txt";
	print OUT "header";
	for(my$j=1;$j<16;$j++){
		print OUT "\t$j";
	}
	print OUT "\n";
	while(my($key2,$val2) = each %$val){
		print OUT "$key2";
		for(my$j=0;$j<15;$j++){;
			print OUT "\t$val2->{$key2}";
		}
		print OUT "\n";
	}
}

foreach my $key (sort{$a<=>$b} keys %sum){
	print "$key\t$sum{$key}\n";
}
