system(" ./boxplot.r Input_boxplot_motifPeakDist_runx2.txt Boxplot_atac_motifPeakDist_runx2.pdf");
system(" ./boxplot.r Input_boxplot_motifPeakDist_tcf3.txt Boxplot_atac_motifPeakDist_tcf3.pdf");
