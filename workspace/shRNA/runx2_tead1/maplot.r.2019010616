#!/usr/bin/env Rscript
library(ggplot2)
library(ggrepel)
args<-commandArgs(T)
pdf(args[2])
data = read.table(args[1],header=TRUE,row.names=1)

Up = nrow(data[data$Tag == "Up",])
Down = nrow(data[data$Tag == "Down",])
No = nrow(data[data$Tag == "No",])

ggplot(data, aes(x=log10(baseMean), y=log2FoldChange))+geom_point(aes(color=Tag),size=0.95)+
scale_colour_manual(name="",values=c(Up="red",Down="darkgreen",No="grey45",TEAD1="cyan"),breaks=c("Up","Down","No","TEAD1"),labels=c(paste("Up:",Up),paste("Down:",Down),paste("No:",No),"TEAD1"))+
theme_bw()+
theme(axis.title=element_text(size =15),axis.text=element_text(size =15),legend.position=c(0.1,0.9),legend.title=element_blank())+
labs(x="Log10 Mean ReadCount", y="Log2(shRNA/Control)")+geom_hline(aes(yintercept=1), colour="#990000", linetype="dashed")+geom_hline(aes(yintercept=-1), colour="#990000", linetype="dashed")+
geom_text_repel(aes(label=gene_name),size=3, data=subset(data,(Tag != "No")))
