#!/usr/bin/env Rscript

require(ggplot2)
require(ggseqlogo)
library(grid)

args<-commandArgs(T)

pdf(args[12],height=12,width=12)


data = as.matrix(read.table(args[1],header=TRUE,row.names=1))
a<-ggseqlogo(data)+labs(legend.position="none")+labs(title="0A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[2],header=TRUE,row.names=1))
b<-ggseqlogo(data)+labs(legend.position="none")+labs(title="1A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[3],header=TRUE,row.names=1))
c<-ggseqlogo(data)+labs(legend.position="none")+labs(title="2A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[4],header=TRUE,row.names=1))
d<-ggseqlogo(data)+labs(legend.position="none")+labs(title="3A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[5],header=TRUE,row.names=1))
e<-ggseqlogo(data)+labs(legend.position="none")+labs(title="4A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[6],header=TRUE,row.names=1))
f<-ggseqlogo(data)+labs(legend.position="none")+labs(title="5A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[7],header=TRUE,row.names=1))
g<-ggseqlogo(data)+labs(legend.position="none")+labs(title="6A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[8],header=TRUE,row.names=1))
h<-ggseqlogo(data)+labs(legend.position="none")+labs(title="7A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[9],header=TRUE,row.names=1))
i<-ggseqlogo(data)+labs(legend.position="none")+labs(title="8A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[10],header=TRUE,row.names=1))
j<-ggseqlogo(data)+labs(legend.position="none")+labs(title="9A")+theme(plot.title = element_text(hjust = 0.5))
data = as.matrix(read.table(args[11],header=TRUE,row.names=1))
k<-ggseqlogo(data)+labs(legend.position="none")+labs(title="10A")+theme(plot.title = element_text(hjust = 0.5))

grid.newpage()
pushViewport(viewport(layout = grid.layout(6, 2)))
vplayout <- function(x, y) viewport(layout.pos.row = x, layout.pos.col = y)
print(a, vp = vplayout(1, 1))
print(b, vp = vplayout(1, 2))
print(c, vp = vplayout(2, 1))
print(d, vp = vplayout(2, 2))
print(e, vp = vplayout(3, 1))
print(f, vp = vplayout(3, 2))
print(g, vp = vplayout(4, 1))
print(h, vp = vplayout(4, 2))
print(i, vp = vplayout(5, 1))
print(j, vp = vplayout(5, 2))
print(k, vp = vplayout(6, 1))

