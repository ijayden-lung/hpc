#!/bin/bash
#PBS -q ser
#PBS -N Read_extract
#PBS -l nodes=1:ppn=8
#PBS -j oe
#PBS -l walltime=05:00:00 

cd $PBS_O_WORKDIR

mkdir Splited_reads

cat ../SampleIndex.txt | while read line
do
    SampleID=`echo $line | awk '{print $1}'`
    index=`echo $line | awk '{print $2}' | cut -d"^" -f 1`
    echo $index
    grep -A 3 --no-group-separator ":$index" Undetermined_S0_R1_001.fastq > ./Splited_reads/${SampleID}_R1.fastq
    grep -A 3 --no-group-separator ":$index" Undetermined_S0_R2_001.fastq > ./Splited_reads/${SampleID}_R2.fastq
done
