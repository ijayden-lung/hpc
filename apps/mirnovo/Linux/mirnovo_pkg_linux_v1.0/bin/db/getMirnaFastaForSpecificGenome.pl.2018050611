#!/usr/bin/env perl

use strict;
use warnings;

my $species = $ARGV[0];


open(CUSTOM_SPECIES_FASTA_FH, ">", "$species"."_mature.fa");

open(HAIRPIN_FH, ,"<", "./mature.fa");

my $FOUND_VALID_ENTRY = 'FALSE';
my $matureSeq = "";

while(my $line = <HAIRPIN_FH>){
    
    
    if($line =~ /^>/){

        if($matureSeq ne ""){
            print CUSTOM_SPECIES_FASTA_FH "$matureSeq";
            $FOUND_VALID_ENTRY = 'FALSE';
            $matureSeq = "";
        }
        
        
        
        #$line =~ s/>//;
        if($line =~ /^>$species/){

            $FOUND_VALID_ENTRY = 'TRUE';
            #my @vals = split(/\s/, $line);
            #print CUSTOM_SPECIES_FASTA_FH "$vals[0]\t$vals[1]\t"; 
            print CUSTOM_SPECIES_FASTA_FH $line; 
        } 
    } else{
        if($FOUND_VALID_ENTRY eq 'TRUE'){
            
            $matureSeq = $matureSeq.$line;
            
        }
    }

}

print CUSTOM_SPECIES_FASTA_FH "$matureSeq";
