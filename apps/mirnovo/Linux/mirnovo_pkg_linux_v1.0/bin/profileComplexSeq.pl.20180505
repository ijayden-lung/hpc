=head1 SUBROUTINES

=cut

sub readFasta {
    my $file = shift @_;
    my $fh   = $file;
    $fh = "gunzip  -c $file | " if ($file =~ m/.gz$/);
    $fh = "bunzip2 -c $file | " if ($file =~ m/.bz2$/);
	open F, "$fh" or die "cannot open $file\n";
	my $id = '';
	while (<F>) {
		chomp;
		if (/>/) { s/>//; $id = $_;     }
		else     { $seqs{$id} .= uc $_; }
	}
	close F;
}

